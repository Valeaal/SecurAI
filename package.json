{
  "name": "tfg",
  "author": "√Ålvaro Valencia",
  "description": "SecurAI IDS, Software UMA TFG",
  "version": "3.0.2-beta",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^35.2.0",
    "electron-builder": "23.6"
  },
  "build": {
    "appId": "valealSecurAI",
    "productName": "SecurAI",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "BackEnd/",
      "!BackEnd/venvTFG",
      "FrontEnd/",
      "package.json",
       "node_modules/"
    ],
    "asar": false,
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "generateUpdatesFilesForAllChannels": false,
    "publish": [
      {
        "provider": "github",
        "publishAutoUpdate": false,
        "releaseType": "release"
      }
    ]
  }
}
