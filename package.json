{
  "name": "tfg",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "valealSecurAI",
    "productName": "SecurAI",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "BackEnd/",
      "!BackEnd/venvTFG",
      "FrontEnd/",
      "package.json"
    ],
    "asar": false,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        },
        {
          "target": "zip",
          "arch": "x64"
        }
      ],
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        },
        {
          "target": "zip",
          "arch": "x64"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "publishAutoUpdate": false,
        "releaseType": "release"
      }
    ]
  }
}
