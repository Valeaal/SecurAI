{
  "name": "securai",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.tuempresa.securai",
    "productName": "SecurAI",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "BackEnd/",
      "FrontEnd/",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.3.0"
  }
}
