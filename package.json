{
  "name": "securai",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.tuempresa.securai",
    "productName": "SecurAI",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "BackEnd/",
      "!BackEnd/venvTFG", 
      "FrontEnd/",
      "package.json"
    ],
    "asar": false,
    "extraMetadata": {
      "main": "main.js"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "identity": null
    },
    "win": {
      "target": "nsis"
    }
  }

}
