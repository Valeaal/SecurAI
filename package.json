{
  "name": "SecurAI",
  "author": "√Ålvaro Valencia",
  "description": "SecurAI IDS, Software UMA TFG",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-log": "^5.2.0",
    "fix-path": "^3.0.0"
  },
  "devDependencies": {
    "electron": "^35.2.0",
    "electron-builder": "23.6"
  },
  "build": {
    "appId": "valealSecurAI",
    "productName": "SecurAI",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "BackEnd/",
      "!BackEnd/venvTFG",
      "FrontEnd/",
      "package.json",
      {
        "from": "FrontEnd/app/node_modules",
        "to": "FrontEnd/app/node_modules",
        "filter": [
          "**/*",
          "!**/.bin/**"
        ]
      },
      {
        "from": "FrontEnd/app/node_modules/.bin",
        "to": "FrontEnd/app/node_modules/.bin"
      },
      {
        "from": "resources/node",
        "to": "resources/node",
        "filter": ["**/*"]
      }
    ],
    "asar": false,
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "generateUpdatesFilesForAllChannels": false,
    "publish": null
  }
}
